<Window x:Class="StudentStatisticGroupe.StudentInformation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentStatisticGroupe"
        mc:Ignorable="d"
        Title="StudentInformation" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button Name="Load" Grid.Column="2" Grid.Row="0" Margin="30" Content="Загрузить" Click="Load_Click"/>
        <DataGrid Name="datagrid" Grid.Column="0" Grid.Row="1" Grid.RowSpan="3" Grid.ColumnSpan="5"/>
    </Grid>
</Window>
