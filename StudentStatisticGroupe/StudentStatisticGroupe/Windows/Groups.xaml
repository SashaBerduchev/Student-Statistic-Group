<Window x:Class="StudentStatisticGroupe.Windows.Groups"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentStatisticGroupe.Windows"
        mc:Ignorable="d"
        Title="Groups" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Name="addGroupe" Grid.Column="0" Grid.Row="0" Content="Имя группы" Margin="40" Click="AddGroupe_Click"  />
        <Button Name="loadGroupe" Grid.Column="1" Grid.Row="0" Content="Загрузить данные" Margin="40" Click="LoadPrepod_Click"  />
        <DataGrid Name="DataGrid" Grid.Column="0"  Grid.Row="1" Grid.RowSpan="2" Grid.ColumnSpan="4" />
    </Grid>
</Window>
