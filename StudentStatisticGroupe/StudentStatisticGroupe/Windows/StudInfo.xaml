<Window x:Class="StudentStatisticGroupe.Windows.StudInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentStatisticGroupe.Windows"
        mc:Ignorable="d"
        Title="StudInfo" Height="300" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox Name="date" Grid.Row="0" Margin="10"/>
        <ComboBox Name="Type" Grid.Row="1" Margin="10"/>
        <ComboBox Name="NameStudent" Grid.Row="2" Margin="10"/>
        <ComboBox Name="NameTeacher" Grid.Row="3" Margin="10"/>
        <ComboBox Name="Points" Grid.Row="4" Margin="10"/>
        <TextBox Name="Comment" Grid.Row="5" Margin="10"/>
        <Button Name="set" Grid.Row="6" Margin="10" Content="Сохранить" Click="Set_Click"/>

    </Grid>
</Window>
