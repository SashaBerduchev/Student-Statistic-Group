<Window x:Class="StudentStatisticGroupe.Windows.Students"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentStatisticGroupe.Windows"
        mc:Ignorable="d"
        Title="Students" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button Name="StudentsAdd" Grid.Column="0" Grid.Row="0" Margin="30" Content="Карточка студента" Click="StudentsAdd_Click"/>
        <Button Name="Load" Grid.Column="1" Grid.Row="0" Margin="30" Content="Загрузить"/>
        <DataGrid Name="datagrid" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="5" Grid.RowSpan="2"/>


    </Grid>
</Window>
